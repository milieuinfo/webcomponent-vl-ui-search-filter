{
  "name": "vl-ui-search-filter",
  "version": "1.0.0",
  "description": "De search filter laat de gebruiker toe om de zoekresulten te verfijnen.",
  "scripts": {
    "prepare": "npm update --dev vl-ui-util && npm run prepare:util",
    "prepare:util": "npm explore vl-ui-util -- npm run util",
    "test": "wct -l chrome,firefox --npm",
    "release": "np",
    "release:prepare": "npm run release:prepare:build && npm run release:prepare:css && npm run release:prepare:commit",
    "release:prepare:build": "uglifyjs --compress --mangle --output vl-search-filter.js -- *.src.js",
    "release:prepare:css": "replace '\\.\\./style.css' '/node_modules/vl-ui-search-filter/style.css' vl-search-filter.js",
    "release:prepare:commit": "git add -f vl-search-filter.js && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo",
    "demo": "http-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-ui-search-filter.git"
  },
  "author": "DIDM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milieuinfo/webcomponent-vl-ui-search-filter/issues"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-ui-search-filter#readme",
  "dependencies": {
    "vl-ui-core": "^2.0.0",
    "replace": "^1.1.1"
  },
  "devDependencies": {
    "@govflanders/vl-ui-search-filter": "^3.9.1",
    "@govflanders/vl-ui-util": "^3.9.1",
    "http-server": "0.11.1",
    "np": "3.0.4",
    "uglify-js-es6": "2.8.9",
    "vl-ui-button": "^1.3.1",
    "vl-ui-input-field": "^1.1.2",
    "vl-ui-select": "^2.0.1",
    "vl-ui-util": "^3.4.2",
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2"
  },
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  }
}
